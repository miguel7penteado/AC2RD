<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item
		android:state_window_focused="false"
		android:state_enabled="true"
		android:drawable="@drawable/button_selector_activated_white"
		/>
	
	<item
		android:state_window_focused="false"
		android:state_enabled="false"
		android:drawable="@drawable/button_selector_disabled_white"
		/>
	
	<item
	    android:state_pressed="true"
		android:drawable="@drawable/button_selector_pressed_white"
		/>
	
	<item
	    android:state_focused="true"
	    android:state_enabled="true"
		android:drawable="@drawable/button_selector_focused_white"
		/>
	
	<item
	    android:state_enabled="true"
		android:drawable="@drawable/button_selector_activated_white"
		/>
	
	<item
	    android:state_focused="true"
		android:drawable="@drawable/button_selector_disabled_focused_white"
		/>
	
	<item android:drawable="@drawable/button_selector_disabled_white" />
</selector>