<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/about"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/terms_toolbar"
		android:minHeight="?attr/actionBarSize"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:theme="?attr/actionBarStyle"
		>
	</android.support.v7.widget.Toolbar>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_centerInParent="true"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			>
			
			<TextView
			    android:id="@+id/terms_of_use_warning"
			    android:text="@string/terms_of_use_warning"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" android:textSize="42sp"
				android:textColor="@color/red"
				android:shadowColor="@color/red"
				/>
		
			<TextView
			    android:id="@+id/terms_of_use_text"
			    android:text="@string/terms_of_use_text"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				/>
			
		</LinearLayout>
		
	</ScrollView>

</LinearLayout>